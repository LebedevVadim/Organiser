@model EventsListModeShow
@{
    ViewBag.Title = "Записи в ежедневнике";
}
@if (Model.CurrentModeShow == Organiser.Models.ModeShowEnum.Day)
{
    @await Component.InvokeAsync("DayMode");
}
@if (Model.CurrentModeShow == Organiser.Models.ModeShowEnum.Week)
{
    @await Component.InvokeAsync("WeekMode");
}
@if (Model.CurrentModeShow == Organiser.Models.ModeShowEnum.Month)
{
    @await Component.InvokeAsync("MonthMode");
}
@if (Model.CurrentModeShow == Organiser.Models.ModeShowEnum.List)
{
    @await Component.InvokeAsync("ListMode");
}