@model IEvent
<input type="hidden" asp-for="EventID">
<div class="form-group">
    <label asp-for="TypeEvent"></label>
    <div><span asp-validation-for="TypeEvent" class="text-danger"></span></div>
    <input disabled asp-for="TypeEvent" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Subject"></label>
    <div><span asp-validation-for="Subject" class="text-danger"></span></div>
    <input asp-for="Subject" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="BeginDate"></label>
    <div><span asp-validation-for="BeginDate" class="text-danger"></span></div>
    <input type="datetime-local" asp-for="BeginDate" class="form-control" />
</div>
